{
    "manifest_version": 3,
    "name": "LinkedIn Auto Engagement",
    "version": "1.0",
    "description": "Automates profile engagement on LinkedIn",
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "notifications",
      "scripting",
      "https://*.linkedin.com/*",
      "<https://your-api-endpoint.com/*>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": "icons/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://*.linkedin.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["stripe/*"],
        "matches": ["https://*.linkedin.com/*"]
      }
    ]
  }
  