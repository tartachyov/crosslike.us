{
  "manifest_version": 3,
  "name": "CrossLike.us Plugin",
  "version": "1.0",
  "description": "Automate LinkedIn interactions",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.quorini.io/*",
    "https://auth.quorini.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["utils.js", "api.js", "auth.js", "content.js"],
      "css": ["content-styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}