{
    "manifest_version": 3,
    "name": "LinkedIn Automation Plugin",
    "version": "1.0",
    "description": "Automates LinkedIn interactions",
    "permissions": [
      "activeTab",
      "storage",
      "alarms",
      "scripting",
      "webNavigation"
    ],
    "host_permissions": [
      "*://*.linkedin.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.linkedin.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_icon": "icon.png"
    },
    "icons": {
      "128": "icon.png"
    }
  }