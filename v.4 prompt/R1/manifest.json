{
    "manifest_version": 3,
    "name": "CrossLike.us R1",
    "version": "1.0",
    "permissions": ["activeTab", "storage", "webNavigation", "notifications"],
    "host_permissions": ["*://*.linkedin.com/*", "*://*.quorini.io/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.linkedin.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_popup": "popup/popup.html"
    }
  }