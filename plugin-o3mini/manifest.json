{
    "manifest_version": 3,
    "name": "LinkedIn Automation Plugin",
    "version": "1.0",
    "description": "Automates LinkedIn interactions and subscription setup",
    "permissions": [
      "tabs",
      "scripting",
      "storage",
      "alarms",
      "notifications"
    ],
    "host_permissions": [
      "*://*.linkedin.com/*",
      "*://your-graphql-endpoint.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.linkedin.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["style.css", "popup.html", "icon.png"],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "LinkedIn Plugin"
    }
  }
  